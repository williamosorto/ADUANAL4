@model  Almacen.BL.SolicitudAduana
@{
    ViewBag.Title = "Detalle de la Solicitud";
}

<h2>Detalle de la Solicitud No: @Model.Id</h2>

<table class="table table-bordered table-hover">
    <tr>
        <td>Cliente</td>
        <td>@Model.Cliente.Nombre</td>
    </tr>
    <tr>
        <td>Telefono</td>
        <td>@Model.Cliente.Telefono</td>
    </tr>
    <tr>
        <td>Direccion</td>
        <td>@Model.Cliente.Direccion</td>
    </tr>
    <tr>
        <td>Fecha</td>
        <td>@Model.Fecha</td>
    </tr>
    <tr>
        <td>Total</td>
        <td>@Model.Total</td>
    </tr>
</table>

<p>
    @Html.ActionLink("Nuevo Servicio", "Crear", new { id = Model.Id })
</p>
<table class="table">
    <tr>
        <th></th>
        <th>
            Servicio
        </th>
        <th>
            Estantes
        </th>
        <th>
            Tamaño del Estante
        </th>
        <th>
            Tiempo Almacenado
        </th>

        <th>
            Precio
        </th>
        <th>
            Total
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.ListaDetalleSolicitud)
    {
        <tr>
            <td>
                <img src="@item.Servicio.UrlImagen" alt="@item.Servicio.Descripcion" style="max-width: 64px; height: auto;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Servicio.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Anchura)mts / @Html.DisplayFor(modelItem => item.Altura)mts
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estadia) Meses
            </td>

            <td>
                Lps: @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                Lps: @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                @Html.ActionLink("Eliminar", "Eliminar", new { id = item.Id })
            </td>
        </tr>
    }

</table>

@Html.ActionLink("Regresar a Solicitud", "Index", "SolicitudAduana")