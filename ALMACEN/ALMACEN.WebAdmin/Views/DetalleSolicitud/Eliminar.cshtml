@model Almacen.BL.DetalleSolicitud

@{
    ViewBag.Title = "Eliminar";
}

<h2>Eliminar</h2>

<h3>&iquest; ¿Esta seguro de eliminar este registro?</h3>
<div>
    <h4>Detalle de la Solicitud</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Solicitud N°
        </dt>
        <dt>
            @Html.DisplayNameFor(model => model.SolicitudId)
        </dt>

        <dt>
            @Html.DisplayNameFor(model => model.Servicio)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Servicio.Descripcion)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Cantidad)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cantidad)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Estadia)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Estadia)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Espacio)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Espacio)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Precio)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Precio)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Total)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Total)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.SolicitudId)

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Regresar a la Lista", "Index", new { id = Model.SolicitudId });
        </div>
    }
</div>

